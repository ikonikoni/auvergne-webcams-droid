    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".ApplicationImpl"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".activity.ActivityMain">
        </activity>

        <activity android:name=".activity.ActivityWebcam"
            android:configChanges="orientation|screenSize"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7cc7cb6974a476c88eaefd8f8f18727ed0ba945a"/>

    </application>

</manifest>