<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="font_proxima_bold">
        <item name="fontPath">fonts/ProximaNova-Bold.otf</item>
    </style>

    <style name="font_proxima_regular">
        <item name="fontPath">fonts/ProximaNova-Regular.otf</item>
    </style>

    <style name="font_proxima_regular_italic">
        <item name="fontPath">fonts/ProximaNova-RegularItalic.otf</item>
    </style>

    <style name="font_proxima_semi_bold">
        <item name="fontPath">fonts/ProximaNova-Sbold.otf</item>
    </style>


    <style name="search_view" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search</item>
        <item name="android:queryHint">@string/search_hint</item>
    </style>

</resources>
