<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontStyleRegular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="FontStyleRegularItalic" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/proxima_nova_regular_italic</item>
    </style>

    <style name="FontStyleSemiBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/proxima_nova_sbold</item>
    </style>

    <style name="FontStyleBold" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
    </style>

</resources>
