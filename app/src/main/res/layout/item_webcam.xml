<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewCamera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_image_list"
                android:foreground="@drawable/shape_view_shadow" />

            <com.like.LikeButton
                android:id="@+id/likeButtonFavListWebcams"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewCamera"
                android:layout_alignRight="@+id/imageViewCamera"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                app:anim_scale_factor="1.7"
                app:circle_end_color="#22FFFFFF"
                app:circle_start_color="#22FFFFFF"
                app:dots_primary_color="#22FFFFFF"
                app:dots_secondary_color="#22FFFFFF"
                app:icon_size="24dp"
                app:icon_type="Star"
                app:like_drawable="@drawable/ic_favorite_white"
                app:unlike_drawable="@drawable/ic_not_favorite_white"  />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/textviewWebcamNotUpdate"
            style="@style/font_proxima_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/dark_grey_transparent"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="2dp"
            android:text="@string/generic_not_up_to_date"
            android:textColor="@color/grey_text"
            android:textSize="14sp"
            android:visibility="gone" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textViewNameWebcam"
        style="@style/font_proxima_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        tools:text="CamÃ©ra 1" />

</LinearLayout>