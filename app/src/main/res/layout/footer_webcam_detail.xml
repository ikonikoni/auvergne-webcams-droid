<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewWebcamDetailErrorMessage"
        style="@style/FontStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/grey_medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/generic_not_up_to_date"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textViewWebcamLowQualityOnly"
        style="@style/FontStyleRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/grey_medium"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/webcam_only_available_low_quality"
        android:textColor="@color/grey_text"
        android:textSize="14sp"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>