<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="24dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp">

        <TextView
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/settings_global_title"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchSettingsRefreshDelay"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/settings_global_refresh"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:theme="@style/SwitchStyle" />

        <LinearLayout
            android:id="@+id/linearLayoutSettingsDelayRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/Font.Text.Regular"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings_global_refresh_delay"
                android:textColor="@color/selector_color_white_to_grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewSettingsDelayValue"
                style="@style/Font.Text.Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
                android:gravity="center_vertical"
                android:textColor="@color/selector_color_white_to_grey"
                android:textSize="16sp"
                tools:text="10" />

        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchSettingsQualityWebcams"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/settings_global_quality_high"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:theme="@style/SwitchStyle" />

        <TextView
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            android:text="@string/settings_credits_title"
            android:textAllCaps="true"
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textViewSettingsAbout"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
            android:gravity="center_vertical"
            android:text="@string/settings_credits_about"
            android:textColor="@color/selector_color_white_to_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSettingsOpenium"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
            android:gravity="center_vertical"
            android:text="@string/settings_credits_openium"
            android:textColor="@color/selector_color_white_to_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSettingsPirates"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
            android:gravity="center_vertical"
            android:text="@string/settings_credits_pirates"
            android:textColor="@color/selector_color_white_to_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSettingsSendNewWebcam"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
            android:gravity="center_vertical"
            android:text="@string/settings_send_new_webcam"
            android:textColor="@color/selector_color_white_to_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSettingsNote"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:drawableEnd="@drawable/selector_arrow_right_small_white_to_grey"
            android:gravity="center_vertical"
            android:text="@string/settings_credits_note"
            android:textColor="@color/selector_color_white_to_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewSettingsVersion"
            style="@style/Font.Text.Regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/grey"
            android:textSize="13sp"
            tools:text="Version 1.0 (1)" />

    </LinearLayout>

</ScrollView>